{
  "extends": "airbnb",
  "rules": {
    "semi" : ["off", "always"]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true
  },   
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended"
  ]
}